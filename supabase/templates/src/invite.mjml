<mjml>
  <mj-head>
    <mj-title>You've Been Invited - Sakiyomi</mj-title>
    <mj-attributes>
      <mj-all font-family="'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#374151" />
      <mj-button background-color="#6366f1" color="#ffffff" border-radius="12px" font-weight="600" />
    </mj-attributes>
    <mj-style>
      .footer-link { color: #6366f1 !important; text-decoration: none; }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f3f4f6">
    <mj-section padding="40px 20px 20px">
      <mj-column>
        <mj-image src="{{ .SiteURL }}/logo.svg" alt="Sakiyomi" width="60px" />
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" border-radius="16px" padding="40px">
      <mj-column>
        <mj-text font-size="24px" font-weight="700" color="#111827" align="center" padding-bottom="8px">
          You're Invited!
        </mj-text>
        <mj-text align="center" color="#6b7280" padding-bottom="24px">
          You've been invited to join Sakiyomi, a planning poker tool for agile teams. Click the button below to create your account.
        </mj-text>
        <mj-button href="{{ .ConfirmationURL }}" padding="16px 32px" font-size="16px">
          Accept Invitation
        </mj-button>
        <mj-text align="center" color="#9ca3af" font-size="14px" padding-top="24px">
          This invitation link will expire in 24 hours.
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section padding="20px">
      <mj-column>
        <mj-text align="center" color="#9ca3af" font-size="13px">
          If you weren't expecting this invitation, you can safely ignore this email.
        </mj-text>
        <mj-text align="center" color="#9ca3af" font-size="13px" padding-top="16px">
          <a href="{{ .SiteURL }}" class="footer-link">Sakiyomi</a> - Planning Poker for Agile Teams
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
