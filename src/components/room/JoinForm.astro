---
interface Props {
  roomId: string;
}

const { roomId } = Astro.props;
---

<div class="max-w-md mx-auto mt-20">
  <div class="bg-slate-800 rounded-2xl p-8 border border-slate-700" id="join-section">
    <h2 class="text-2xl font-semibold text-white mb-2 text-center">Join this room</h2>
    <p class="text-slate-400 text-center mb-6">Enter your name to start voting</p>
    <form action={`/api/rooms/${roomId}/join`} method="POST" id="join-form" class="space-y-4">
      <input
        type="text"
        name="name"
        id="name"
        required
        placeholder="Your name"
        class="w-full px-4 py-3 bg-slate-900 border border-slate-600 rounded-xl text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-center text-lg"
      />
      <button
        type="submit"
        class="w-full px-4 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-medium rounded-xl transition-colors"
      >
        Join Room
      </button>
      <p id="join-error" class="text-red-400 text-sm text-center hidden"></p>
    </form>
  </div>
</div>
