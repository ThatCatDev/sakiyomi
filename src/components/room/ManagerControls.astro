---
import type { VotingStatus } from '../../lib/room/types';

interface Props {
  votingStatus: VotingStatus;
}

const { votingStatus } = Astro.props;
---

<div class="bg-slate-800/50 rounded-xl p-4 mb-6 border border-slate-700" id="manager-controls">
  <div class="flex items-center gap-2 mb-3">
    <svg class="w-4 h-4 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>
    <span class="text-sm text-indigo-400 font-medium">Manager Controls</span>
  </div>

  <!-- Waiting state: Show start voting form -->
  <div id="manager-waiting" class:list={[{ 'hidden': votingStatus !== 'waiting' }]}>
    <div class="flex gap-2">
      <input
        type="text"
        id="topic-input"
        placeholder="Enter topic (optional)"
        class="flex-1 px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white text-sm placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
      />
      <button
        id="start-voting-btn"
        class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-medium rounded-lg transition-colors btn-press"
      >
        Start Voting
      </button>
    </div>
  </div>

  <!-- Voting state: Show reveal button -->
  <div id="manager-voting" class:list={[{ 'hidden': votingStatus !== 'voting' }]}>
    <div class="flex gap-2">
      <button
        id="reveal-votes-btn"
        class="flex-1 px-4 py-2 bg-green-600 hover:bg-green-500 text-white text-sm font-medium rounded-lg transition-colors btn-press"
      >
        Reveal Votes
      </button>
      <button
        id="reset-votes-btn"
        class="px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white text-sm font-medium rounded-lg transition-colors btn-press"
      >
        Reset
      </button>
    </div>
  </div>

  <!-- Revealed state: Show new round button -->
  <div id="manager-revealed" class:list={[{ 'hidden': votingStatus !== 'revealed' }]}>
    <div class="flex gap-2">
      <input
        type="text"
        id="next-topic-input"
        placeholder="Next topic (optional)"
        class="flex-1 px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white text-sm placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
      />
      <button
        id="new-round-btn"
        class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-medium rounded-lg transition-colors btn-press"
      >
        New Round
      </button>
    </div>
  </div>

</div>
