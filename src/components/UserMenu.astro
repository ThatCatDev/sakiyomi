---
interface Props {
  email: string;
  displayName?: string | null;
  avatarUrl?: string | null;
}

const { email, displayName, avatarUrl } = Astro.props;
const displayText = displayName || email;
const initial = displayText.charAt(0).toUpperCase();
---

<div class="relative" id="user-menu">
  <button
    type="button"
    id="user-menu-button"
    class="flex items-center gap-2 text-content-secondary hover:text-content-primary transition-colors p-1 -m-1"
    aria-expanded="false"
    aria-haspopup="true"
  >
    {avatarUrl ? (
      <img src={avatarUrl} alt={displayText} class="w-8 h-8 rounded-full bg-surface-elevated" />
    ) : (
      <div class="w-8 h-8 bg-brand rounded-full flex items-center justify-center text-sm font-medium text-white">
        {initial}
      </div>
    )}
    <span class="hidden sm:inline text-sm">{displayText}</span>
    <svg class="w-4 h-4 transition-transform hidden sm:block" id="menu-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <!-- Dropdown menu -->
  <div
    id="user-dropdown"
    class="absolute right-0 mt-2 w-48 bg-surface-card rounded-xl shadow-lg border border-border-default py-1 hidden z-50"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="user-menu-button"
  >
    <a
      href="/teams"
      class="flex items-center gap-2 px-4 py-3 text-sm text-content-secondary hover:bg-surface-hover hover:text-content-primary transition-colors"
      role="menuitem"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      Teams
    </a>
    <a
      href="/profile"
      class="flex items-center gap-2 px-4 py-3 text-sm text-content-secondary hover:bg-surface-hover hover:text-content-primary transition-colors"
      role="menuitem"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      Profile
    </a>
    <hr class="my-1 border-border-default" />
    <form method="POST" action="/api/auth/signout" class="w-full">
      <button
        type="submit"
        class="flex items-center gap-2 w-full px-4 py-3 text-sm text-error hover:bg-surface-hover transition-colors"
        role="menuitem"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        Sign out
      </button>
    </form>
  </div>
</div>

<script>
  function initUserMenu() {
    const menuButton = document.getElementById('user-menu-button');
    const dropdown = document.getElementById('user-dropdown');
    const chevron = document.getElementById('menu-chevron');

    if (!menuButton || !dropdown || !chevron) return;

    // Remove old listener and add new one
    const newButton = menuButton.cloneNode(true);
    menuButton.parentNode?.replaceChild(newButton, menuButton);

    newButton.addEventListener('click', (e) => {
      e.stopPropagation();
      const isHidden = dropdown.classList.contains('hidden');
      dropdown.classList.toggle('hidden');
      chevron.classList.toggle('rotate-180');
      newButton.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
    });
  }

  // Initialize on load and after View Transitions
  initUserMenu();
  document.addEventListener('astro:page-load', initUserMenu);

  // Close dropdowns on click outside or escape (only add once)
  if (!(window as any).__userMenuGlobalInit) {
    (window as any).__userMenuGlobalInit = true;
    document.addEventListener('click', (e) => {
      const dropdown = document.getElementById('user-dropdown');
      const menuButton = document.getElementById('user-menu-button');
      const chevron = document.getElementById('menu-chevron');
      if (dropdown && menuButton && !dropdown.contains(e.target as Node) && !menuButton.contains(e.target as Node)) {
        dropdown.classList.add('hidden');
        chevron?.classList.remove('rotate-180');
        menuButton.setAttribute('aria-expanded', 'false');
      }
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const dropdown = document.getElementById('user-dropdown');
        const menuButton = document.getElementById('user-menu-button');
        const chevron = document.getElementById('menu-chevron');
        if (dropdown && menuButton) {
          dropdown.classList.add('hidden');
          chevron?.classList.remove('rotate-180');
          menuButton.setAttribute('aria-expanded', 'false');
        }
      }
    });
  }
</script>
