---
interface Props {
  variant?: 'primary' | 'secondary' | 'danger' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  id?: string;
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  class: className = '',
  id,
  disabled = false,
} = Astro.props;

const baseClasses = 'btn-press font-medium rounded-xl transition-colors disabled:opacity-50 disabled:cursor-not-allowed focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2 focus:ring-offset-surface-card';

const variantClasses = {
  primary: 'bg-brand hover:bg-brand-hover text-white',
  secondary: 'bg-surface-tertiary hover:bg-surface-hover text-content-primary',
  danger: 'bg-error hover:bg-error/90 text-white',
  ghost: 'bg-transparent hover:bg-surface-hover text-content-secondary hover:text-content-primary',
};

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<button type={type} class={classes} id={id} disabled={disabled}>
  <slot />
</button>
