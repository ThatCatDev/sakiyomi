---
import Modal from '../ui/Modal.astro';
---

<Modal id="kick-modal" title="Remove Participant?" description="">
  <p id="kick-modal-description" class="text-slate-400 text-sm mb-4">
    Are you sure you want to remove this participant from the room?
  </p>
  <div class="flex gap-3">
    <button
      id="cancel-kick-btn"
      class="flex-1 px-4 py-3 bg-slate-700 hover:bg-slate-600 text-white font-medium rounded-xl transition-colors btn-press"
    >
      Cancel
    </button>
    <button
      id="confirm-kick-btn"
      class="flex-1 px-4 py-3 bg-red-600 hover:bg-red-500 text-white font-medium rounded-xl transition-colors btn-press"
    >
      Remove
    </button>
  </div>
</Modal>
