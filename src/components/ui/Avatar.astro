---
interface Props {
  name: string;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  name,
  size = 'md',
  class: className = '',
} = Astro.props;

const initial = name.charAt(0).toUpperCase();

const sizeClasses = {
  sm: 'w-8 h-8 text-sm',
  md: 'w-10 h-10 text-base',
  lg: 'w-12 h-12 text-lg',
};

const classes = `${sizeClasses[size]} bg-indigo-600 rounded-full flex items-center justify-center flex-shrink-0 ${className}`;
---

<div class={classes}>
  <span class="text-white font-medium">{initial}</span>
</div>
