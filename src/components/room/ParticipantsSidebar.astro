---
import type { Participant, VotingStatus } from '../../lib/room/types';
import ParticipantItem from './ParticipantItem.astro';

interface Props {
  currentParticipant: Participant | null;
  participants: Participant[];
  votingStatus: VotingStatus;
  isManager: boolean;
}

const { currentParticipant, participants, votingStatus, isManager } = Astro.props;
---

<div class="w-72 border-l border-slate-800 bg-slate-900/50 flex flex-col flex-shrink-0 hidden lg:flex">
  <!-- Your Status -->
  {currentParticipant && (
    <div class="p-4 border-b border-slate-800">
      <div class="flex items-center justify-between mb-2">
        <div class="flex items-center gap-2">
          <span class="text-xs text-slate-500 uppercase tracking-wider">You</span>
          {isManager && (
            <span class="text-xs bg-indigo-600/30 text-indigo-300 px-2 py-0.5 rounded-full">Manager</span>
          )}
        </div>
        <div class="flex gap-1">
          <button
            id="edit-name-btn"
            class="p-1 text-slate-400 hover:text-white transition-colors"
            title="Change name"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </button>
          <button
            id="leave-room-btn"
            class="p-1 text-slate-400 hover:text-red-400 transition-colors"
            title="Leave room"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
          </button>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center">
          <span class="text-white font-medium">{currentParticipant.name.charAt(0).toUpperCase()}</span>
        </div>
        <span class="text-white font-medium" id="current-user-name">{currentParticipant.name}</span>
      </div>

      <!-- Edit Name Form (hidden by default) -->
      <form id="edit-name-form" class="hidden mt-3 space-y-2">
        <input
          type="text"
          name="name"
          id="edit-name-input"
          required
          value={currentParticipant.name}
          class="w-full px-3 py-2 bg-slate-800 border border-slate-600 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
        <div class="flex gap-2">
          <button type="submit" class="flex-1 px-3 py-2 bg-indigo-600 hover:bg-indigo-500 text-white text-sm rounded-lg">
            Save
          </button>
          <button type="button" id="cancel-edit-btn" class="flex-1 px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white text-sm rounded-lg">
            Cancel
          </button>
        </div>
        <p id="edit-error" class="text-red-400 text-xs hidden"></p>
      </form>
    </div>
  )}

  <!-- Participants List -->
  <div class="flex-1 overflow-y-auto p-4">
    <div class="flex items-center justify-between mb-3">
      <span class="text-xs text-slate-500 uppercase tracking-wider">Participants</span>
      <span class="text-xs text-slate-500" id="participant-count">{participants?.length || 0}</span>
    </div>

    <ul class="space-y-2" id="participants-list">
      {participants && participants.map((p) => (
        <ParticipantItem
          participant={p}
          isCurrentUser={currentParticipant?.id === p.id}
          votingStatus={votingStatus}
          canPromote={isManager && currentParticipant?.id !== p.id && p.role !== 'manager'}
          canDemote={isManager && p.role === 'manager'}
        />
      ))}
    </ul>

    <p
      class="text-slate-500 text-sm text-center py-4"
      id="no-participants"
      class:list={[{ 'hidden': participants && participants.length > 0 }]}
    >
      No one has joined yet
    </p>
  </div>
</div>
