---
interface Props {
  teamSlug: string;
  teamName: string;
}

const { teamSlug, teamName } = Astro.props;
---

<div
  id="delete-team-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center p-4"
  role="dialog"
  aria-modal="true"
  aria-labelledby="delete-team-modal-title"
  data-team-slug={teamSlug}
  data-team-name={teamName}
>
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" data-modal-backdrop></div>

  <!-- Modal -->
  <div class="relative w-full max-w-md bg-surface-card rounded-2xl shadow-xl border border-status-error/30">
    <div class="p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-full bg-status-error/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-status-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </div>
        <h2 id="delete-team-modal-title" class="text-xl font-semibold text-content-primary">
          Delete Team?
        </h2>
      </div>

      <p class="text-content-secondary mb-4">
        This action is <strong class="text-status-error">permanent</strong> and cannot be undone. This will:
      </p>

      <ul class="text-sm text-content-secondary space-y-2 mb-4 ml-4">
        <li class="flex items-start gap-2">
          <svg class="w-4 h-4 text-status-error mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Delete all team rooms and their data
        </li>
        <li class="flex items-start gap-2">
          <svg class="w-4 h-4 text-status-error mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Remove all team members
        </li>
        <li class="flex items-start gap-2">
          <svg class="w-4 h-4 text-status-error mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          Invalidate all pending invitations
        </li>
      </ul>

      <div class="mb-4">
        <label for="confirm-team-name" class="block text-sm font-medium text-content-secondary mb-1.5">
          Type <strong class="text-content-primary">{teamName}</strong> to confirm
        </label>
        <input
          type="text"
          id="confirm-team-name"
          placeholder={teamName}
          class="w-full px-4 py-2.5 bg-surface-elevated border border-border-default rounded-xl text-content-primary placeholder-content-muted focus:outline-none focus:ring-2 focus:ring-status-error focus:border-transparent"
        />
      </div>

      <div id="delete-team-error" class="hidden text-sm text-status-error bg-status-error/10 px-4 py-2 rounded-lg mb-4">
      </div>

      <div class="flex gap-3">
        <button
          type="button"
          data-modal-close
          class="flex-1 px-4 py-2.5 bg-surface-elevated text-content-primary rounded-xl font-medium hover:bg-surface-hover transition-colors"
        >
          Cancel
        </button>
        <button
          type="button"
          id="confirm-delete-btn"
          disabled
          class="flex-1 px-4 py-2.5 bg-status-error text-white rounded-xl font-medium hover:bg-status-error/90 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Delete Team
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  import { deleteTeam } from '../../lib/team/api';

  function initDeleteTeamModal() {
    const modal = document.getElementById('delete-team-modal');
    if (!modal) return;

    const teamSlug = modal.dataset.teamSlug;
    const teamName = modal.dataset.teamName;
    if (!teamSlug || !teamName) return;

    const backdrop = modal.querySelector('[data-modal-backdrop]');
    const closeBtn = modal.querySelector('[data-modal-close]');
    const confirmBtn = document.getElementById('confirm-delete-btn') as HTMLButtonElement;
    const confirmInput = document.getElementById('confirm-team-name') as HTMLInputElement;
    const errorDiv = document.getElementById('delete-team-error');

    // Close modal handlers
    const closeModal = () => {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      confirmInput.value = '';
      confirmBtn.disabled = true;
      errorDiv?.classList.add('hidden');
    };

    backdrop?.addEventListener('click', closeModal);
    closeBtn?.addEventListener('click', closeModal);

    // Handle escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Enable/disable confirm button based on input
    confirmInput?.addEventListener('input', () => {
      confirmBtn.disabled = confirmInput.value !== teamName;
    });

    // Handle delete confirmation
    confirmBtn?.addEventListener('click', async () => {
      if (confirmInput.value !== teamName) return;

      confirmBtn.disabled = true;
      confirmBtn.textContent = 'Deleting...';
      errorDiv?.classList.add('hidden');

      try {
        await deleteTeam(teamSlug);
        // Redirect to teams list
        window.location.href = '/teams';
      } catch (err) {
        if (errorDiv) {
          errorDiv.textContent = err instanceof Error ? err.message : 'Failed to delete team';
          errorDiv.classList.remove('hidden');
        }
        confirmBtn.disabled = false;
        confirmBtn.textContent = 'Delete Team';
      }
    });
  }

  initDeleteTeamModal();
  document.addEventListener('astro:page-load', initDeleteTeamModal);

  // Export function to open modal
  (window as any).openDeleteTeamModal = () => {
    const modal = document.getElementById('delete-team-modal');
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.getElementById('confirm-team-name')?.focus();
    }
  };
</script>
