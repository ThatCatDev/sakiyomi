---
import Layout from '../layouts/Layout.astro';
import { getAppName } from '../lib/branding';

const appName = getAppName(Astro.url.hostname);
---

<Layout title={`Not Found - ${appName}`}>
  <main class="min-h-screen flex items-center justify-center p-4">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-white mb-4">404</h1>
      <p class="text-xl text-slate-400 mb-8">Page not found</p>
      <a
        href="/"
        class="px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-medium rounded-xl transition-colors"
      >
        Go Home
      </a>
    </div>
  </main>
</Layout>
