---
import Modal from '../ui/Modal.astro';
---

<Modal id="leave-modal" title="Leave Room?" description="You'll need to rejoin with your name if you want to come back.">
  <div class="flex gap-3">
    <button
      id="cancel-leave-room-btn"
      class="flex-1 px-4 py-3 bg-surface-tertiary hover:bg-surface-hover text-content-primary font-medium rounded-xl transition-colors btn-press"
    >
      Stay
    </button>
    <button
      id="confirm-leave-room-btn"
      class="flex-1 px-4 py-3 bg-error hover:bg-error/90 text-white font-medium rounded-xl transition-colors btn-press"
    >
      Leave
    </button>
  </div>
</Modal>
