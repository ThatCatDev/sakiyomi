---
interface Props {
  id: string;
  title?: string;
  description?: string;
  size?: 'sm' | 'md' | 'lg';
  showCloseButton?: boolean;
  noPadding?: boolean;
}

const {
  id,
  title,
  description,
  size = 'sm',
  showCloseButton = false,
  noPadding = false,
} = Astro.props;

const sizeClasses = {
  sm: 'max-w-sm',
  md: 'max-w-md',
  lg: 'max-w-lg',
};
---

<div
  id={id}
  class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4 modal-backdrop"
>
  <div class={`bg-surface-card rounded-2xl border border-border-default w-full modal-content max-h-[90vh] overflow-y-auto ${sizeClasses[size]} ${noPadding ? '' : 'p-6'}`}>
    {(title || showCloseButton) && (
      <div class:list={['flex items-center justify-between', { 'mb-2': title && !noPadding }]}>
        {title && <h2 class="text-xl font-semibold text-content-primary">{title}</h2>}
        {showCloseButton && (
          <button
            class="close-modal-btn text-content-muted hover:text-content-primary transition-colors p-1 -mr-1"
            data-modal-id={id}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        )}
      </div>
    )}
    {description && <p class="text-content-muted mb-6">{description}</p>}
    <slot />
  </div>
</div>

<script is:inline>
  // Generic modal open/close functions that work with any modal ID
  window.openModal = function(id) {
    const modal = document.getElementById(id);
    if (modal) {
      modal.classList.remove('hidden', 'closing');
    }
  };

  window.closeModal = function(id) {
    const modal = document.getElementById(id);
    if (modal) {
      modal.classList.add('closing');
      setTimeout(() => {
        modal.classList.add('hidden');
        modal.classList.remove('closing');
      }, 150);
    }
  };

  // Also create convenience functions for specific modal IDs
  function setupModalFunctions() {
    document.querySelectorAll('.modal-backdrop').forEach((modal) => {
      const id = modal.id;
      if (!id) return;

      // Create window functions for this modal
      window['open_' + id] = function() { window.openModal(id); };
      window['close_' + id] = function() { window.closeModal(id); };

      // Skip event binding if already done
      if (modal.__modalInit) return;
      modal.__modalInit = true;

      // Backdrop click to close
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          window.closeModal(id);
        }
      });

      // Close button click
      var closeBtn = modal.querySelector('.close-modal-btn');
      if (closeBtn) {
        closeBtn.addEventListener('click', function() {
          window.closeModal(id);
        });
      }
    });
  }

  // Global escape key handler
  if (!window.__modalEscapeInit) {
    window.__modalEscapeInit = true;
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        document.querySelectorAll('.modal-backdrop:not(.hidden)').forEach(function(modal) {
          window.closeModal(modal.id);
        });
      }
    });
  }

  // Run on initial load
  setupModalFunctions();

  // Run after View Transitions
  document.addEventListener('astro:page-load', setupModalFunctions);
</script>
