---
import UserMenu from './UserMenu.astro';
import { getAppName, getDocsUrl } from '../lib/branding';

interface Props {
  user?: { email?: string } | null;
  showRoomInfo?: boolean;
  roomName?: string;
  showSettings?: boolean;
  participantCount?: number;
  roomUrl?: string;
}

const { user, showRoomInfo = false, roomName, showSettings = false, participantCount = 0, roomUrl } = Astro.props;
const appName = getAppName(Astro.url.hostname);
const docsUrl = getDocsUrl(Astro.url.hostname);
---

<nav class="border-b border-slate-800 flex-shrink-0">
  <div class:list={[
    "mx-auto px-4 flex items-center justify-between",
    showRoomInfo ? "max-w-7xl py-3" : "max-w-6xl py-4"
  ]}>
    <div class="flex items-center gap-2 sm:gap-4 min-w-0">
      <a href="/" class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
        <img src="/logo.svg" alt={appName} class:list={[showRoomInfo ? "w-8 h-8" : "w-10 h-10"]} />
        <span class:list={[
          "font-bold text-white hidden sm:inline",
          showRoomInfo ? "text-lg" : "text-xl"
        ]}>{appName}</span>
      </a>

      {showRoomInfo && (
        <>
          <span class="text-slate-500 hidden sm:inline">|</span>
          <h1 class="text-white font-medium truncate max-w-[120px] sm:max-w-none text-sm sm:text-base" id="room-name-display">{roomName}</h1>
          {showSettings && (
            <button
              id="open-settings-btn"
              class="text-slate-400 hover:text-white transition-colors p-1 flex-shrink-0"
              title="Room Settings"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </button>
          )}
        </>
      )}
    </div>

    <div class="flex items-center gap-2 sm:gap-4">
      <!-- Desktop nav (hidden in room on mobile, always visible on desktop) -->
      <div class:list={["items-center gap-4", showRoomInfo ? "hidden sm:flex" : "hidden sm:flex"]}>
        <a href={docsUrl} target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-white transition-colors text-sm">
          Docs
        </a>
        <a href="https://github.com/thatcatdev/sakiyomi" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-white transition-colors" title="GitHub">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
          </svg>
        </a>
      </div>

      <slot name="extra" />

      <!-- Mobile room buttons (only in room) -->
      {showRoomInfo && (
        <>
          <!-- Share button -->
          <button
            id="mobile-share-btn"
            class="lg:hidden p-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors"
            aria-label="Share room"
            data-room-url={roomUrl}
            data-room-name={roomName}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
          </button>
          <!-- Participants button -->
          <button
            id="mobile-participants-btn"
            class="lg:hidden flex items-center gap-1.5 px-3 py-1.5 bg-slate-800 hover:bg-slate-700 text-white rounded-lg transition-colors"
            aria-label="View participants"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
            </svg>
            <span id="mobile-participant-count" class="text-sm font-medium">{participantCount}</span>
          </button>
        </>
      )}

      {user ? (
        <UserMenu email={user.email || ''} />
      ) : (
        <>
          <a href="/login" class="hidden sm:inline text-slate-300 hover:text-white transition-colors text-sm">
            Sign in
          </a>
          <a href="/signup" class:list={[
            "px-3 sm:px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white font-medium rounded-xl transition-colors text-sm",
            showRoomInfo && "hidden sm:inline-block"
          ]}>
            Sign up
          </a>
        </>
      )}

      <!-- Mobile hamburger -->
      <button
        id="mobile-menu-btn"
        class="sm:hidden text-slate-400 hover:text-white transition-colors p-1"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu dropdown -->
  <div id="mobile-menu" class="hidden sm:hidden border-t border-slate-800 bg-slate-900">
    <div class="px-4 py-3 space-y-3">
      <a href={docsUrl} target="_blank" rel="noopener noreferrer" class="block text-slate-300 hover:text-white transition-colors">
        Docs
      </a>
      <a href="https://github.com/thatcatdev/sakiyomi" target="_blank" rel="noopener noreferrer" class="block text-slate-300 hover:text-white transition-colors">
        GitHub
      </a>
      {!user && (
        <a href="/login" class="block text-slate-300 hover:text-white transition-colors">
          Sign in
        </a>
      )}
      {!user && (
        <a href="/signup" class="block text-indigo-400 hover:text-indigo-300 transition-colors font-medium">
          Sign up
        </a>
      )}
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Mobile share button
  const shareBtn = document.getElementById('mobile-share-btn') as HTMLButtonElement;
  if (shareBtn) {
    const roomUrl = shareBtn.dataset.roomUrl || window.location.href;
    const roomName = shareBtn.dataset.roomName || 'Room';

    shareBtn.addEventListener('click', async () => {
      // Try native share first
      if (navigator.share) {
        try {
          await navigator.share({
            title: `Join ${roomName}`,
            text: `Join my estimation session: ${roomName}`,
            url: roomUrl,
          });
          return;
        } catch (err) {
          // User cancelled or share failed, fall back to clipboard
          if ((err as Error).name === 'AbortError') return;
        }
      }

      // Fallback: copy to clipboard
      try {
        await navigator.clipboard.writeText(roomUrl);
        // Show feedback
        const originalHtml = shareBtn.innerHTML;
        shareBtn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
        setTimeout(() => {
          shareBtn.innerHTML = originalHtml;
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  }
</script>
